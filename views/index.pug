extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

       
      h1 Portfolio

      
      p.lead.text-light
        | Welcome to my portfolio! View more information about each project by clicking on an image. Feel free to get in touch. I would love to hear from you!
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

       
      each project,index in projects
        .cell
          a(href=`/project/${index+1}`,target="_blank")
            img.thumbnail(src= `${project.image_urls[0]}`)
            h5= project.project_name
      
